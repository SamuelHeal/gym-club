<main class="body"> 
      <div class="individual-blog individual-blog2">
        {{#if allowEdit}}
        <div class="button-container">
          <button id="delete-blog-button" class="back-button" data-blogs-id="{{id}}" user-id="{{user.id}}">Delete</button>
        </div>
          {{/if}}
        <h1 class="blog-heading">{{title}}</h1>
        {{!-- <div class="row2">
            <p class="dateCreated">{{format_time date_created}}</p> | <a class="aStyle" href="/user/{{user.id}}">{{user.username}}</a>
        </div> --}}
        <div class="blog-para datey">
          <p>{{format_time date_created}} | <a class="aStyle" href="/user/{{user.id}}">{{user.username}}</a></p>
        </div>
        <div class="blog-para desy">
          <p>
            {{description}}
          </p>
        </div>
        <button class="back-button btn-primary log" type="submit" id="like-button" data-update-id="{{id}}">Like</button>
        <p>Likes: {{likes}}</p>
      </div>

      <div class='addcomment'>
        <form id="comment-form">
            <input class="input-box" type="text" id="comment-box" name="comment-box">
            <button class="back-button btn-primary log" type="submit" id="comment-button" data-post-id="{{id}}">Comment</button>
        </form>
      </div>
     
      {{#each comments as |comment|}}
          <section class="comment">
              <a class="commentHeader name-comment" href="/user/{{comment.user.id}}"><p>{{comment.user.username}}</p></a>
              <img src="{{comment.user.picture}}" class="comment-picture"/>
              <p class="real-comment">{{comment.comment}}</p>
          </section>
          {{/each}}
    
    
  </main>