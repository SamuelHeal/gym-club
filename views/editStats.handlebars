<header class="homeheader">
    <img class="logo" src="/Images/GymClub.png">
    <div class="menuflex">
      <div class="menudrop">
          <a href="/">Home</a>
          <a href="/user/{{user_id}}">Profile</a>
          {{#if loggedIn}}
          <a href="/">Logout</a>
          {{else}}
          <a href="/login">Login</a>
          {{/if}}
      </div>
      <a class="menuBtn"><img class="menu" src="/Images/MenuBar.png"></a>
    </div>
</header>


<main class="body">
    <a href="/user/{{id}}">Back</a>

    <div class="newBlogContainer">
        <h1>Edit Your Profile!</h1>
        <div class="formDiv">
            <form>
                <label for="Username">Username:</label><br>
                <input type="text" id="Username" name="Username"><br>
                <label for="Age">Age:</label><br>
                <input type="text" id="Age" name="Age">
                <label for="Height">Height:</label><br>
                <input type="text" id="Height" name="Height">
                <label for="Weight">Weight:</label><br>
                <input type="text" id="Weight" name="Weight">
                <label for="Max-Deadlift">Max Deadlift:</label><br>
                <input type="text" id="Max Deadlift" name="Max Deadlift">
                <label for="Max-Bench-Press">Max Bench Press:</label><br>
                <input type="text" id="Max-Bench-Press" name="Max-Bench-Press">
                <label for="Max-Squat">Max Squat:</label><br>
                <input type="text" id="Max-Squat" name="Max-Squat">
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>

</main>