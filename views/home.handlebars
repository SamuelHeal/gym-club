{{!-- Comment --}}

<header class="homeheader">
    <img class="logo" src="/Images/GymClub.png">
    <a class="menuBtn"><img class="menu" src="/Images/MenuBar.png"></a>
    <div>
        <a href="/home">Home</a>
        <a href="/user">Profile</a>
        {{#if loggedIn}}
        <a href="/">Logout</a>
        {{else}}
        <a href="/">Login</a>
        {{/if}}
    </div>
    
</header>
    
  <main class="body"> 
    {{#each blogs as |blog| }}
    <a href="#">
      <div class="individual-blog">
        <div class="row">
          <a href="/user/{{blog.user.id}}">{{blog.user.username}}</a>
          <p>{{blog.date_created}}</p>
        </div>
        <h1 class="blog-heading">{{blog.title}}</h1>
        <p class="seperator">_____________________</p>
        <div class="blog-para">
          <p>
            {{blog.description}}
          </p>
        </div>
      </div>
    </a>
    {{/each}}
  </main>

  <script>
    const rotate = 
        anime({ 
        targets: '.menu',
        duration: 300,
        rotate: 180,
        easing: 'linear',
        autoplay: false
        })
    

    const btn = document.querySelector(".menuBtn")

    btn.onclick = rotate.play
      

  </script>