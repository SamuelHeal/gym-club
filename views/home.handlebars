{{!-- Comment --}}

<header class="homeheader">
    <img class="logo" src="/Images/GymClub.png">
    <div class="menuflex">
      <div class="menudrop">
          <a id="homeBtn" href="/">Home</a>
          {{#if user_id}}
          <a href="/user/{{user_id}}">Profile</a>
          {{/if}}
          {{#if logged_in}}
          <a id="logout-button" href="/">Logout</a>
          {{else}}
          <a href="/welcome">Login</a>
          {{/if}}
      </div>
      <a class="menuBtn"><img class="menu" src="/Images/MenuBar.png"></a>
      
    </div>
    
    
</header>
  <main class="body"> 
    {{#each blogs as |blog| }}
    
      <div class="individual-blog" onclick="location.href='/blog/{{blog.id}}'">
        
        <h1 class="blog-heading">{{blog.title}}</h1>
    
        <div class="blog-para">
          <p>
            {{blog.description}}
          </p>
        </div>
        <div class="row">
          <a class="aStyle" href="/user/{{blog.user.id}}">{{blog.user.username}}</a>
          <p>{{format_time blog.date_created}}</p>
        </div>
        
      </div>
      
    
    {{/each}}
  </main>

  <script>
    const rotate = 
        anime({ 
        targets: '.menu',
        duration: 300,
        rotate: 180,
        easing: 'linear',
        autoplay: false
        })
    

    const btn = document.querySelector(".menuBtn")

    btn.onclick = rotate.play
      

  </script>