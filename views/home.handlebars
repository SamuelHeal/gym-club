<main class="body"> 
    <h1 class="blogHeading">Blogs</h1>
    {{#each blogs as |blog| }}
    
      <div class="individual-blog" onclick="location.href='/blog/{{blog.id}}'">
        
        <h1 class="blog-heading">{{blog.title}}</h1>
    
        <div class="blog-para">
          <p>
            {{blog.description}}
          </p>
        </div>
        <div class="row">
          <a class="aStyle" href="/user/{{blog.user.id}}">{{blog.user.username}}</a>
          <p class="dateCreated">{{format_time blog.date_created}}</p>
        </div>
        
      </div>
      
    
    {{/each}}
  </main>
