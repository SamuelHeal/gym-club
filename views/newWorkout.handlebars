<header class="homeheader">
    <img class="logo" src="/Images/GymClub.png">
    <div class="menuflex">
      <div class="menudrop">
          <a href="/">Home</a>
          {{#if user_id}}
          <a href="/user/{{user_id}}">Profile</a>
          {{/if}}
          {{#if loggedIn}}
          <a id="logout-button" href="/">Logout</a>
          {{else}}
          <a href="/welcome">Login</a>
          {{/if}}
      </div>
      <a class="menuBtn"><img class="menu" src="/Images/MenuBar.png"></a>
      
    </div>
</header>

<main class="body">
    
    

    <div class="newBlogContainer">
        <div class="backBtn">
            <a class="newBlogBackBtn" href="/userWorkouts/{{user_id}}">Back</a>
        </div>
        <h1 class="blogHeading">Create a New Workout!</h1>
        <div class="formDiv">
            <form class="firstForm">
                <label for="Title">Workout Title</label><br>
                <input type="text" id="Title" name="Title"><br><br>
                <label for="Description">Description</label><br>
                <input type="text" id="Description" name="Description"><br><br>
                <input class="btn" type="submit" id="new-workout-button" value="Submit">
            </form>
        </div>
        

    </div>

</main>

